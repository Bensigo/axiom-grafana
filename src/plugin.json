{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/master/docs/sources/developers/plugins/plugin.schema.json",
  "type": "datasource",
  "name": "Axiom",
  "id": "axiomhq-axiom-datasource",
  "metrics": true,
  "logs": true,
  "backend": true,
  "executable": "axiom-datasource-plugin",
  "info": {
    "description": "Query axiom through grafana",
    "author": {
      "name": "Axiom, Inc.",
      "url": "https://axiom.co"
    },
    "keywords": [
      "datasource",
      "axiom",
      "events",
      "metrics",
      "logs"
    ],
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "links": [
      {
        "name": "GitHub",
        "url": "https://github.com/axiomhq/axiom-grafana"
      },
      {
        "name": "Discord",
        "url": "https://axiom.co/discord"
      }
    ],
    "screenshots": [],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "dependencies": {
    "grafanaDependency": "^9.3.8",
    "plugins": []
  },
  "routes": [
    {
      "path": "datasets",
      "method": "POST",
      "url": "{{ .JsonData.apiHost }}/v1/datasets",
      "reqRole": "Editor",
      "headers": [
        {
          "name": "Authorization",
          "content": "Bearer {{ .SecureJsonData.accessToken }}"
        },
        {
          "name": "UserAgent",
          "content": "axiom-grafana/v1.0.0"
        },
        {
          "name": "Content-Type",
          "content": "application/json"
        }
      ]
    }
  ]
}